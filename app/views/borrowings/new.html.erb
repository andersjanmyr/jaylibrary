<h1>New borrowing</h1>

<% form_for(@borrowing) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :book_copy %><br />
    <%= f.text_field :book_copy %>
  </p>
  <p>
    <%= f.label :library %><br />
    <%= f.text_field :library %>
  </p>
  <p>
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', borrowings_path %>